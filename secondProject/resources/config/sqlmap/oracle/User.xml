<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "kr.co.tripadvisor.repository.mapper.UserMapper">
	<resultMap type="user" id="userMap">
		<result column="no" property="no" />
		<result column="id" property="id" />
		<result column="pass" property="pass" />
		<result column="name" property="name" />
		<result column="birth" property="birth" />
		<result column="email" property="email" />
		<result column="sex" property="sex" />
		<result column="board_auth" property="boardAuth" />
		<result column="reg_date" property="regDate" />
	</resultMap>

	<insert id="insertUser" parameterType="user">
		insert into user(
			no, id, pass, name, birth, email, sex, board_auth
		) values (
			s_user_no.nextval,
			#{id},
			#{pass},
			#{name},
			#{birth},
			#{email},
			#{sex},
			#{boardAuth}
		)
	</insert>

	<select id="selectUser" resultMap="userMap">
		select *
		  from user
		 order by reg_date desc
	</select>

	<select id="selectUserById" parameterType="string" resultMap="userMap">
		select *
		  from user
		 where id = #{id}
	</select>
	
	<update id="updateUser" parameterType="user">
		update user
		   set pass = #{pass}, email = #{email}
		 where id = #{id}	
	</update>

	<delete id="deleteUser" parameterType="string">
		delete
		  from user
		 where id = #{id}
	</delete>

</mapper>
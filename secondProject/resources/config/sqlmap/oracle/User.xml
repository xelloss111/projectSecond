<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "kr.co.tripadvisor.repository.mapper.UserMapper">
	<resultMap type="user" id="userMap">
		<result column="no" property="no" />
		<result column="id" property="id" />
		<result column="pass" property="pass" />
		<result column="name" property="name" />
		<result column="birth" property="birth" />
		<result column="email" property="email" />
		<result column="sex" property="sex" />
		<result column="board_auth" property="boardAuth" />
		<result column="reg_date" property="regDate" />
	</resultMap>

	<insert id="insertUser" parameterType="user">
		insert into tb_user(
			no, id, pass, name, birth, email, sex
		) values (
			s_user_no.nextval,
			#{id},
			#{pass},
			#{name},
			#{birth},
			#{email},
			#{sex}
		)
	</insert>

	<select id="selectUser" resultMap="userMap">
		select *
		  from tb_user
		 order by reg_date desc
	</select>

	<select id="selectUserById" parameterType="string" resultMap="userMap">
		select *
		  from tb_user
		 where id = #{id}
	</select>
	
	<update id="updateUser" parameterType="user">
		update tb_user
		   set pass = #{pass}, email = #{email}
		 where id = #{id}	
	</update>

	<delete id="deleteUser" parameterType="string">
		delete
		  from tb_user
		 where id = #{id}
	</delete>
	
		<select id="selectIdCount" parameterType="string" resultType="int">
		select count(*)
		  from tb_user
		 where id = #{id} 
	</select>

	<select id="selectEmailCount" parameterType="string" resultType="int">
		select count(*)
		  from tb_user
		 where email = #{email} 
	</select>
	
	
	<!-- admin 페이지 관리자가 유저 정보 수정 시 사용할 쿼리 -->
	<update id="adminUpdateUser" parameterType="user">
		update tb_user
		   set board_auth = #{boardAuth}
		 where id = #{id}
	</update>

</mapper>